<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dialogsControl="clr-namespace:MaterialDesignXaml.DialogsHelper.Controls;assembly=MaterialDesignXaml.DialogsHelper">

    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}" x:Key="BaseButton"/>
    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Margin" Value="0 5 0 0"/>
    </Style>

    <Style TargetType="dialogsControl:DialogButton" BasedOn="{StaticResource MaterialDesignFlatButton}"/>

</ResourceDictionary>